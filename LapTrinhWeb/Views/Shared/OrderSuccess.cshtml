@{
    ViewBag.Title = "OrderSuccess";
}

<style>
    html, body {
        height: 100%; /* Chiều cao full trang */
        margin: 0;
        padding: 0;
    }

    body {
        display: flex;
        flex-direction: column; /* Sắp xếp theo cột */
        min-height: 100vh; /* Chiều cao tối thiểu bằng viewport */
    }

    .content {
        flex: 1; /* Chiếm phần còn lại, đẩy footer xuống */
    }

    footer {
        background-color: #ADADAD;
        color: black;
        text-align: center;
        padding: 15px 0;
    }

    .underline-link {
        text-decoration: underline;
        color: blue;
        font-weight: bold;
    }

    .underline-link:hover {
        color: black;
        font-weight: bold;
        text-decoration: underline;
    }
</style>

<h4 style="text-align: center; margin-top: 30px; margin-bottom: 40px; font-family: Arial; font-weight: bolder;"><i class="fa-solid fa-heart"></i> Đơn hàng của bạn đã được đặt thành công <i class="fa-solid fa-heart"></i> </h4>
<h5 style="text-align: center; font-family: Arial; font-weight: bolder;">Hãy click @Html.ActionLink("here", "Index", "Product", null, new { @class = "underline-link" }) để đi đến trang sản phẩm !</h5>
<img src="@Url.Content("~/img/banner/thank_you.gif")"
     alt="Loading..."
     style="width: 50%; display: block; margin: 30px auto 50px auto; box-shadow: rgba(50, 50, 93, 0.25) 0px 50px 100px -20px, rgba(0, 0, 0, 0.3) 0px 30px 60px -30px; " />


