@model LapTrinhWeb.Models.UserModel

@{
    ViewBag.Title = "Login";
    Layout = null;
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />

}

@if (ViewBag.Error != null)
{
    <div style="color:red">@ViewBag.Error</div>
}

<!-- Nền toàn màn hình -->
<style>
    html, body {
        margin: 0;
        padding: 0;
        overflow: hidden;
    }
</style>

<div style="background-image: url('@Url.Content("~/img/GioiThieu/anh_login.jpg")');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            width: 100vw;
            height: 100vh;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


    <div class="box_login" style="border-radius: 20px;
                            width: 400px;
                            padding: 30px;
                            box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
                            background-color: rgba(255, 255, 255, 0.6);">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <h2 class="header" style="text-align: center;
           font-weight: bolder;
           margin-bottom: 30px;">
            Đăng Nhập
        </h2>

        <div class="form-group">
            <div style="width: 100%; height: 45px; border-radius: 14px; padding-left: 10px; margin-bottom: 25px; align-items: center; margin-left: 10px;">
                @Html.TextBoxFor(model => model.UserName, new
                {
                    @class = "form-control",
                    style = "width: 80%; height: 45px; " +
                    "border-radius: 14px; padding-left: 10px;" +
                    "margin-bottom: 15px; margin-left: 20px;",
                    placeholder = "Tài khoản"
                })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div style="width: 100%; height: 45px; border-radius: 14px; padding-left: 10px; margin-bottom: 25px; align-items: center; margin-left: 10px; ">
                @Html.PasswordFor(model => model.UserPassword, new
                {
                    @class = "form-control",
                    style = "width: 80%; height: 45px; " +
                    "border-radius: 14px; padding-left: 10px;" +
                    "margin-bottom: 15px; margin-left: 20px;",
                    placeholder = "Mật khẩu"
                })
                @Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="remember-forgot" style="font-size: 16px; font-weight: bolder; margin-bottom: 20px; display: flex; justify-content: space-between; width: 80%; margin-left: 40px;">
            <label><input type="checkbox" /> Nhớ mật khẩu</label>
            <a href="#" style="text-decoration: underline; font-weight: normal;">Quên mật khẩu?</a>
        </div>

        <div style="display: flex; justify-content: space-between; align-items: center;">
            <button type="submit" class="login-button" style="width: 80%; height: 45px; border-radius: 14px; font-weight: bolder; margin-left: 40px;">
                Đăng Nhập
            </button>
        </div>

        <div style="margin-top: 20px; font-size: 16px; text-align: center;">
            Bạn chưa có tài khoản?
            <a style="font-weight: bolder; text-decoration: underline;" href="@Url.Action("Signup", "Login")">Đăng Ký</a>
        </div>

        <div style="margin-top: 20px;">
            <a href="@Url.Action("Index", "Home")"
               style="text-decoration: none; font-weight: bold; font-size: 16px; display: inline-flex; align-items: center; margin-right: 220px; color: #000;">
                <i class="fa-solid fa-backward" style="margin-right: 8px;"></i> Quay lại home
            </a>
        </div>
    </div>
    }
</div>

