@model LapTrinhWeb.Models.UserModel
@{
    ViewBag.Title = "Signup";
    Layout = null;
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />

}

@if (ViewBag.Error != null)
{
    <div style="color:red">@ViewBag.Error</div>
}

<!-- Nền toàn màn hình -->
<style>
    html, body {
        margin: 0;
        padding: 0;
        overflow: hidden;
    }
</style>

<div style="background-image: url('@Url.Content("~/img/GioiThieu/anh_login.jpg")');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            width: 100vw;
            height: 100vh;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;">

    <!-- Form chính giữa -->



    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


    <div class="box_login" style="border-radius: 20px;
                               width: 400px;
                               padding: 30px;
                               box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
                               background-color: rgba(255, 255, 255, 0.6);">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <h2 class="header" style="text-align: center;
              font-weight: bolder;
              margin-bottom: 30px;">
            Đăng Ký
        </h2>

        <div class="login-form" style="display: flex; flex-direction: column; align-items: center;">
            <input style="width: 80%; height: 45px; border-radius: 14px; padding-left: 10px; margin-bottom: 25px;"
                   inputmode="numeric"
                   pattern="[0-9]*"
                   oninput="this.value = this.value.replace(/[^0-9]/g, '')"
                   placeholder="Số điện thoại"
                   id="phone"
                   name="phone"
                   type="text"
                   required />
        </div>

        <div class="form-group">
            <div style="width: 100%; height: 45px; border-radius: 14px; padding-left: 10px; margin-bottom: 25px; align-items: center; margin-left: 10px;">
                @Html.TextBoxFor(model => model.UserName, new
                {
                    @class = "form-control",
                    style = "width: 80%; height: 45px; " +
                    "border-radius: 14px; padding-left: 10px;" +
                    "margin-bottom: 15px; margin-left: 20px;",
                    placeholder = "Tài khoản"
                })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div style="width: 100%; height: 45px; border-radius: 14px; padding-left: 10px; margin-bottom: 25px; align-items: center; margin-left: 10px; ">
                @Html.PasswordFor(model => model.UserPassword, new
                {
                    @class = "form-control",
                    style = "width: 80%; height: 45px; " +
                    "border-radius: 14px; padding-left: 10px;" +
                    "margin-bottom: 15px; margin-left: 20px;",
                    placeholder = "Mật khẩu"
                })
                @Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <label style="display: flex; align-items: center; font-size: 16px; font-weight: bold; margin-bottom: 20px; margin-left: 40px;">
            <input type="checkbox" style="margin-right: 8px;" /> Tôi đồng ý với các điều khoản !
        </label>


        <div style="display: flex; justify-content: space-between; align-items: center;">
            <button type="submit" class="login-button" style="width: 80%; height: 45px; border-radius: 14px; font-weight: bolder; margin-left: 40px;">
                Đăng ký
            </button>
        </div>
        <div style="margin-top: 20px;">
            <a href="@Url.Action("Login", "Login")"
               style="text-decoration: none; font-weight: bold; font-size: 16px; display: inline-flex; align-items: center; margin-right: 220px; color: #000;">
                <i class="fa-solid fa-backward" style="margin-right: 8px;"></i> Quay lại
            </a>
        </div>
    </div>
    }
</div>

